rule index_reference_fasta:
    conda:
        "../../envs/bwa-samtools.yml"
    container:
        containers["bwa_samtools"]
    input:
        "{any_genome}.{ext}"
    output:
        "{any_genome}.{ext}.fai",
        "{any_genome}.{ext}.bwt",
    shell:
        """
        samtools faidx {input[0]} &> /dev/null
        bwa index {input[0]} &>> /dev/null
        """

rule index_bam_file:
    conda:
        "../../envs/bwa-samtools.yml"
    container:
        containers["bwa_samtools"]
    input:
        "{any_bam}.bam"
    output:
        temp("{any_bam}.bam.bai"),
    shell:
        """
        samtools index {input[0]}
        """
