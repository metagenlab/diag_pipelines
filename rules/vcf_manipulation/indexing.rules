rule compress_vcf:
    conda:
        "../../envs/htslib.yml"
    container:
        containers["htslib"]   
    input:
        "{any_vcf}.{vcf_or_bed}",
    output:
        temp("{any_vcf}.{vcf_or_bed, (vcf|bed)}.gz"),
    shell:
        """
        bgzip -c {input[0]} > {output[0]}
        """

rule index_vcf_bed:
    container:
        containers["htslib"]  
    conda:
        "../../envs/htslib.yml"
    input:
        "{any_vcf}.{vcf_or_bed}.gz",
    output:
        temp("{any_vcf}.{vcf_or_bed, (vcf|bed)}.gz.tbi"),
    shell:
        """
        tabix -f -p {wildcards.vcf_or_bed} {input[0]}
        """
        
rule sort_vcf:
    conda:
        "../../envs/bcftools.yml"
    container:
        containers["htslib"]  
    input:
        "{any_vcf}.vcf.gz",
    output:
        temp("{any_vcf}_sorted.vcf"),
    shell:
        """
        bcftools sort {input[0]}  > {output[0]}
        """
